<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/message_layout"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/message_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/message_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <RelativeLayout
        android:layout_toLeftOf="@id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/message_publisher_photo"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:text="大宝"
            android:textSize="17sp"
            android:id="@+id/message_publisher_name"
            android:layout_toRightOf="@id/message_publisher_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_publisher_content"
            android:layout_below="@id/message_publisher_name"
            android:text="等哈见是的哈接收到就看哈看寄售点卡几乎是肯德基"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_publisher_time"
            android:text="5分钟之前"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_toRightOf="@id/message_publisher_photo"
            android:layout_below="@id/message_publisher_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_light_grey"
        android:layout_alignParentBottom="true" />

</RelativeLayout>